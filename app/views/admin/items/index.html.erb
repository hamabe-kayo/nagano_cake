<h2>商品一覧</h2>

<div class="new_item">
  <%=link_to "新規登録", new_admin_item_path, class: "btn btn-success btn-md"%>
</div>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <%@items.each do |item|%>
    <tr>
      <td><%=item.id%></td>
      <td><%=link_to item.name, admin_item_path(item.id)%></td>
      <td><%=item.price%></td>
      <td><%=item.genre.name%></td>
      <td>
        <%if item.is_active == true%>
        <font color="green">販売中</font>
        <%else%>
        <font color="red">販売停止中</font>
        <%end%>
      </td>
    </tr>
    <%end%>
  </tbody>

  <%=paginate @items%>
</table>