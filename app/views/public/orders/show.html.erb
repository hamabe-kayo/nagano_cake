<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-1">

    </div>

    <div class="col-md-10">
      <h2>注文履歴詳細</h2>

      <div class="order_table">
        <div class="order_information">
          <h6>注文情報</h6>
          <table border="1" style="border-collapse: collapse">
            <tr>
              <th width="100px">注文日</th>
              <td width="300px"><%=@order.created_at.strftime('%Y/%m/%d')%></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%=@order.shipping_postal_code%></br>
                <%=@order.shipping_address%></br>
                <%=@order.shipping_name%>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%=@order.payment_method_i18n%></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%=@order.order_status_i18n%></td>
            </tr>
          </table>
        </div>

        <div class="billing_information">
          <h6>請求情報</h6>
          <table border="1" style="border-collapse: collapse;">
            <tr>
              <th width="150px">合計金額</th>
              <td width="150px"><%=@order.payment%>円</td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%=@postage%>円</td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td><%=(@order.payment + 800).to_s%>円</td>
            </tr>
          </table>
        </div>
      </div>

      <h6>注文内容</h6>
      <table border="1" style="border-collapse: collapse;">
        <thead>
          <tr>
            <th width="300px">商品</th>
            <th width="100px">単価(税込)</th>
            <th width="100px">個数</th>
            <th width="100px">小計</th>
          </tr>
        </thead>
        <tbody>
          <%@order.order_details.each do |order_detail|%>
          <tr>
            <td><%=order_detail.item.name%></td>
            <td><%=order_detail.item.with_tax_price%>円</td>
            <td><%=order_detail.amount%></td>
            <td><%=order_detail.subtotal%>円</td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>

    <div class="col-1"></div>
  </div>
</div>
