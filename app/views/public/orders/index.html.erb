<h2>注文履歴一覧</h2>

<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <%@orders.each do |order|%>
    <tr>
      <td><%=order.created_at.strftime('%Y/%m/%d')%></td>
      <td>
        <%=order.order.shipping_postal_code%></br>
        <%=order.order.shipping_address%></br>
        <%=order.order.shipping_name%>
      </td>
      <td>
        <%order.items.each do |order.item|%>
          <%=order.item.name%>
        <%end%>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>