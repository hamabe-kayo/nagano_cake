<h2>会員情報編集</h2>

<%=form_with model: @customer, local: true do |f|%>

<div class="field">
  <%=f.label "名前"%>
  <%=f.label "　"%>
  <%=f.text_field :last_name, autofocus: true%>
  <%=f.label "　"%>
  <%=f.text_field :first_name, autofocus: true%>
</div>

<div class="field">
  <%=f.label "フリガナ"%>
  <%=f.label "　"%>
  <%=f.text_field :last_name_kana, autofocus: true%>
  <%=f.label "　"%>
  <%=f.text_field :first_name_kana, autofocus: true%>
</div>

<div class="field">
  <%=f.label "郵便番号(ハイフンなし)"%>
  <%=f.text_field :postal_code, autofocus: true%>
</div>

<div class="field">
  <%=f.label "住所"%>
  <%=f.text_area :address, size: "50x1", autofocus: true%>
</div>

<div class="field">
  <%=f.label "電話番号(ハイフンなし)"%>
  <%=f.text_field :telephone_number, autofocus: true%>
</div>

<div class="field">
  <%= f.label "メールアドレス" %>
  <%= f.email_field :email, autofocus: true %>
</div>

<div class="actions">
  <%=f.submit "変更を保存"%>
</div>

<%=link_to "退会する", quit_customers_path%>

<%end%>