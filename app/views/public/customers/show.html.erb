<h2>マイページ</h2>

<div class="link">
<h3>登録情報</h3>
<span><%=link_to "編集する", edit_customer_path(current_customer.id)%></span>
</div>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <td><%=@customer.full_name%></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%=@customer.full_name_kana%></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%=@customer.postal_code%></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%=@customer.address%></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%=@customer.telephone_number%></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%=@customer.email%></td>
    </tr>
  </thead>
</table>

<div class="link">
  <h3>配送先</h3>
  <span><%=link_to "一覧を見る", shipping_addresses_path%></span>
</div>

<div class="link">
  <h3>注文履歴</h3>
  <span><%=link_to "一覧を見る", orders_path%></span>
</div>