<h2>配送先登録一覧</h2>

<%=form_with model: @shipping_address, local: true do |f|%>
<table>
  <tr>
    <th><%=f.label "郵便番号(ハイフンなし)"%></th>
    <td><%=f.text_field :postal_code, autofocus: true%></td>
    <td></td>
  </tr>
  <tr>
    <th><%=f.label "住所"%></th>
    <td><%=f.text_area :address, size: "50x1", autofocus: true%></td>
    <td></td>
  </tr>
  <tr>
    <th><%=f.label "宛名"%></th>
    <td><%=f.text_field :name, autofocus: true%></td>
    <td></td>
  </tr>
  <tr>
    <th></th>
    <td></td>
    <td><%=f.submit "新規登録"%></td>
  </tr>
</table>
<%end%>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <%@shipping_addresses.each do |shipping_address|%>
    <tr>
      <td><%=shipping_address.postal_code%></td>
      <td><%=shipping_address.address%></td>
      <td><%=shipping_address.name%></td>
      <td><%=link_to "編集する", edit_shipping_address_path(shipping_address.id)%></td>
      <td><%=link_to "削除する", shipping_addresses_path(shipping_address.id)%></td>
    </tr>
  </tbody>
  <%end%>
</table>
