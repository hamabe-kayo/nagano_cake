<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-1">

    </div>
    <div class="col-md-11">
      <h2>商品一覧</h2>
      <div>
        <%@items.each do |item|%>
        <div class="itemcard">
          <%=attachment_image_tag item, :image, :fill,250,180,fallback: "no_image.jpg"%>
          <%=link_to item_path(item.id) do%>
          <p><%=item.name%></p>
          <p><%=item.price%></p>
          <%end%>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>