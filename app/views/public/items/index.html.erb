<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-2">

    </div>
    <div class="col-md-10">
      <h2>商品一覧</h2><p>(全<%=@items.count%>件)</p>

      <div class="newitem">
        <%=link_to "", new_admin_item_path do%>
          <i class="fa-thin fa-circle-plus"></i>
          <%end%>
      </div>
      <div>
        <%@items.each do |item|%>
        <div class="itemcard">
          <%=attachment_image_tag item, :image, :fill,250,180,fallback: "no_image.jpg"%>
          <%=link_to item_path(item.id) do%>
          <p><%=item.name%></p>
          <p>¥<%=item.with_tax_price%></p>
          <%end%>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>