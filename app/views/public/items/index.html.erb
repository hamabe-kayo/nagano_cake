<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-1">

    </div>
    <div class="col-md-10">
      <h2>商品一覧</h2><p>(全<%=@items.count%>件)</p>
      <div>
        <%@items.each do |item|%>
        <div class="itemcard">
          <%=link_to item_path(item.id), class: "itemlist" do%>
            <%=attachment_image_tag item, :image, :fill,210,180,fallback: "no_image.jpg"%></br>
            <%=item.name%></br>
            ¥<%=item.with_tax_price%>
          <%end%>
        </div>
        <%end%>
      </div>
    </div>
    <div class="col-1"></div>

  </div>
</div>